{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/back-end/**/*", "src/index.ts", "src/shared/models/entities.ts"],
  "exclude": ["node_modules", "dist"]
}
